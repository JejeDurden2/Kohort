{
  "name": "kohortpay-api",
  "version": "0.0.1",
  "description": "KohortPay API",
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Jérôme Desmares",
  "private": false,
  "license": "ISC",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "types": "dist/src/main.d.ts",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "postinstall": "pnpm run type:generate",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:check": "prettier \"src/**/*.ts\" \"test/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:dump": "./scripts/dump-database.sh",
    "db:load": "./scripts/load-database.sh",
    "type:generate": "npx prisma generate --generator client",
    "schema:generate": "npx prisma generate --generator erd",
    "migrate": "npx prisma migrate dev --create-only",
    "migrate:deploy": "npx prisma migrate deploy",
    "openapi:generate-json": "curl http://localhost:3000/api-json > openapi.json",
    "openapi:generate-json-full": "curl http://localhost:3000/api-json > openapi-full.json",
    "openapi:generate-yaml": "swagger-cli bundle ./openapi.json -o ./openapi.yaml -t yaml",
    "openapi:generate-yaml-full": "swagger-cli bundle ./openapi-full.json -o ./openapi-full.yaml -t yaml",
    "cypress": "if [ \"$NODE_ENV\" = \"dev\" ]; then ts-node ./scripts/run-cypress.ts; else node ./dist/scripts/run-cypress.js; fi"
  },
  "dependencies": {
    "@bull-board/api": "^5.21.4",
    "@bull-board/express": "^5.21.4",
    "@clerk/clerk-sdk-node": "^4.13.21",
    "@golevelup/nestjs-stripe": "^0.8.2",
    "@golevelup/nestjs-webhooks": "^0.2.18",
    "@google-cloud/storage": "^7.12.1",
    "@hubspot/api-client": "^12.0.1",
    "@nestjs/axios": "^3.0.3",
    "@nestjs/bull": "^10.2.1",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.6",
    "@nestjs/event-emitter": "^2.1.1",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/microservices": "^10.4.4",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/schedule": "^4.1.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.2.3",
    "@prisma/client": "^5.22.0",
    "@slack/webhook": "^7.0.3",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.3",
    "caseparser": "^3.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "colord": "^2.9.3",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "express-basic-auth": "^1.2.1",
    "fast-csv": "^5.0.1",
    "fastest-levenshtein": "^1.0.16",
    "getstream": "^8.4.1",
    "humps": "^2.0.1",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "nest-winston": "^1.10.0",
    "nestjs-prisma": "0.23.0",
    "octokit": "^3.2.1",
    "passport": "^0.7.0",
    "passport-http": "^0.3.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.15.1",
    "pg": "^8.13.1",
    "prisma": "^5.19.1",
    "reflect-metadata": "^0.2.2",
    "resend": "^4.0.0",
    "rxjs": "^7.8.1",
    "stripe": "^17.1.0",
    "svix": "^1.40.0",
    "uid": "^2.0.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.1.0",
    "@golevelup/ts-jest": "^0.6.1",
    "@mermaid-js/mermaid-cli": "^11.2.0",
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "29.5.14",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "22.9.0",
    "@types/passport": "^1.0.17",
    "@types/passport-http": "^0.3.11",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prettier": "^3.3.3",
    "prisma-erd-generator": "^1.11.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "swagger-cli": "^4.0.4",
    "ts-jest": "29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
